doctype
html
    head
        title login

        meta(charset='utf-8')
        meta(name='viewport' content="width=device-width, initial-scale=1")

        link(href=siteUrl("admin_lte/bootstrap/css/bootstrap.min.css") rel='stylesheet' type='text/css')
        // FontAwesome 4.3.0
        link(href=siteUrl("bower_components/font-awesome/css/font-awesome.min.css") rel='stylesheet' type='text/css')
        // Ionicons 2.0.0
        link(href=siteUrl("bower_components/Ionicons/css/ionicons.min.css") rel='stylesheet' type='text/css')
        // Theme style
        link(href=siteUrl("admin_lte/dist/css/AdminLTE.min.css") rel='stylesheet' type='text/css')
        //
          AdminLTE Skins. Choose a skin from the css/skins
          folder instead of downloading all of them to reduce the load.
          <link href="dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
        link(href=siteUrl("admin_lte/dist/css/skins/skin-purple.min.css") rel='stylesheet' type='text/css')


        link(href=siteUrl("stylesheets/admin.css") rel='stylesheet' type='text/css')

    body.container(style="padding-top: 70px;")
        input(type="hidden" id="site_url" value=siteUrl())

        .container-fluid(style="width: 350px;")
            .panel.panel-primary
                .panel-heading
                    h3.panel-title ComparandoAndo - ADMIN
                .panel-body

                    form.form-horizontal(action=siteUrl('admin/authenticate') method="POST")
                        .form-group(id="username_block")
                            .col-md-12
                                .input-group
                                    .input-group-addon
                                        span.glyphicon.glyphicon-user
                                    input.form-control.field-required(type="text" id="username" name="username" value=(usuario ? usuario.username : '') placeholder="Usuario")
                                span.error-validation(id="username_error")

                        .form-group(id="password_block")
                            .col-md-12
                                .input-group
                                    .input-group-addon
                                        span.glyphicon.glyphicon-asterisk
                                    input.form-control.field-required(type="password" id="password" name="password" value="" placeholder="Contrase√±a")
                                span.error-validation(id="password_error")

                        .form-group
                            .col-md-12.text-center(style="padding-top: 10px;")
                                input.btn.btn-success(type="submit" value="Entrar" style="width: 50%;")



    // ./wrapper
    // jQuery 2.1.3
    script(src=siteUrl("bower_components/jquery/dist/jquery.min.js"))
    // jQuery UI 1.11.2
    script(src=siteUrl("bower_components/jquery-ui/jquery-ui.min.js") type='text/javascript')
    // Resolve conflict in jQuery UI tooltip with Bootstrap tooltip
    script.
      $.widget.bridge('uibutton', $.ui.button);
    // Bootstrap 3.3.2 JS
    script(src=siteUrl("admin_lte/bootstrap/js/bootstrap.min.js") type='text/javascript')
    script(src=siteUrl("bower_components/date-and-time/date-and-time.min.js"))
    // AdminLTE App
    script(src=siteUrl("admin_lte/dist/js/app.min.js") type='text/javascript')

    script(src=siteUrl("javascripts/admin_app.js") type='text/javascript')