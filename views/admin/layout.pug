doctype html
head
    meta(charset='UTF-8')
    meta(name='robots' content='noindex, nofollow')

    title Admin Comparador
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport')
    // Bootstrap 3.3.2
    link(href=siteUrl("admin_lte/bootstrap/css/bootstrap.min.css") rel='stylesheet' type='text/css')
    // FontAwesome 4.3.0
    link(href=siteUrl("bower_components/font-awesome/css/font-awesome.min.css") rel='stylesheet' type='text/css')
    // Ionicons 2.0.0
    link(href=siteUrl("bower_components/Ionicons/css/ionicons.min.css") rel='stylesheet' type='text/css')
    // Theme style
    link(href=siteUrl("admin_lte/dist/css/AdminLTE.min.css") rel='stylesheet' type='text/css')
    //
      AdminLTE Skins. Choose a skin from the css/skins
      folder instead of downloading all of them to reduce the load.
      <link href="dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
    link(href=siteUrl("admin_lte/dist/css/skins/skin-purple.min.css") rel='stylesheet' type='text/css')


    link(href=siteUrl("stylesheets/admin.css") rel='stylesheet' type='text/css')

    block content_css

body.skin-purple
    input(type='hidden' id='site_url' value=siteUrl())
    .wrapper
        header.main-header
            // Logo
            a.logo(href=siteUrl('admin'))
                b Administraci&oacute;n
            // Header Navbar: style can be found in header.less
            nav.navbar.navbar-static-top(role='navigation')
                // Sidebar toggle button
                a.sidebar-toggle(href='#' data-toggle='offcanvas' role='button')
                    span.sr-only Toggle navigation
                .navbar-custom-menu
                    ul.nav.navbar-nav
        // Left side column. contains the logo and sidebar
        aside.main-sidebar
            // sidebar: style can be found in sidebar.less
            section.sidebar
                // Sidebar user panel
                .user-panel
                    .pull-left.image
                        i.fa.fa-user.fa-3x.text-purple
                    .pull-left.info
                        p Antonio Martin
                        a(href='#')
                            i.fa.fa-circle.text-success
                            |  Online
                // sidebar menu: : style can be found in sidebar.less
                block active_menu
                            - var menu = {category: '', option: ''}

                ul.sidebar-menu
                    li.header MENU PRINCIPAL

                    li(class=(menu.option == 'sitio_administrar' ? 'active' : ''))
                        a(href=siteUrl('admin/sitios')) Sitios

                    li(class=(menu.option == 'producto_productos' ? 'active' : ''))
                        a(href=siteUrl('admin/productos')) Productos

                    li(class=(menu.option == 'oferta_ofertas' ? 'active' : ''))
                        a(href=siteUrl('admin/ofertas')) Ofertas

                    li(class=(menu.option == 'scraper' ? 'active' : ''))
                        a(href=siteUrl('admin/scraper')) Scraper

                    li(class=(menu.option == 'oferta_precios' ? 'active' : ''))
                        a(href=siteUrl('admin/ofertas_precios')) Actualizar Precios

                    li(class=(menu.option == 'oferta_enlazar' ? 'active' : ''))
                        a(href=siteUrl('admin/ofertas_enlazar')) Enlazar Ofertas

                    li
                        a(href=siteUrl('admin/logout')) Salir

            // /.sidebar
        // Right side column. Contains the navbar and content of the page
        .content-wrapper
            // Content Header (Page header)
            section.content-header
                block content_header

            // Main content
            section.content
                block content
            // /.content
        // /.content-wrapper
        footer.main-footer
            .pull-right.hidden-xs
                b Version 1.0
            strong 2018
// ./wrapper
// jQuery 2.1.3
script(src=siteUrl("bower_components/jquery/dist/jquery.min.js"))
// jQuery UI 1.11.2
script(src=siteUrl("bower_components/jquery-ui/jquery-ui.min.js") type='text/javascript')
// Resolve conflict in jQuery UI tooltip with Bootstrap tooltip
script.
  $.widget.bridge('uibutton', $.ui.button);
// Bootstrap 3.3.2 JS
script(src=siteUrl("admin_lte/bootstrap/js/bootstrap.min.js") type='text/javascript')
script(src=siteUrl("bower_components/date-and-time/date-and-time.min.js"))
// AdminLTE App
script(src=siteUrl("admin_lte/dist/js/app.min.js") type='text/javascript')

script(src=siteUrl("javascripts/admin_app.js") type='text/javascript')

block content_js
